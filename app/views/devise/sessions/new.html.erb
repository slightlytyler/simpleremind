<div class="login modal-window">
  <h2 class="blue-main hard-shadow-light">sign in</span></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: :email, class: 'floatlabel bg-blue-light' %>

    <%= f.password_field :password, autocomplete: "off", placeholder: :password, class: 'floatlabel bg-blue-light' %>

    <%= f.submit "LOG IN", class: "btn btn-default btn-lg" %>

    <% if devise_mapping.rememberable? -%>
      <section class="remember-me col-md-6 slab"><%= f.check_box :remember_me %> <%= f.label :remember_me, class: 'slabtext hard-shadow' %></section>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <section class="forgot-password col-md-6 slab"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "white slabtext hard-shadow" %></section>
    <% end -%>

  <% end %>

  <%= render "devise/shared/links" %>
</div>