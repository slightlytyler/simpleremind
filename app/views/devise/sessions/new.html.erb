<div class="login">
  <h2><span class="blue-main">sign</span><span class="gray-main">in</span></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: :email %>

    <%= f.password_field :password, autocomplete: "off", placeholder: :password %>

    <%= f.submit "LOG IN", class: "btn btn-default btn-lg" %>

    <% if devise_mapping.rememberable? -%>
      <section class="remember-me col-md-6"><%= f.check_box :remember_me %> <%= f.label :remember_me %></section>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <section class="forgot-password col-md-6"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "white" %></section>
    <% end -%>

  <% end %>

  <%= render "devise/shared/links" %>
</div>