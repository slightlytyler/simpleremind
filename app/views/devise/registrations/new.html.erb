<div class="splash" id="sign-up-splash">
  <div class="outer-container">
    <div id="login-pricing" class="block slab block-brace smooth-entry center-horizontal-rel">
      <span class="slabtext bold hard-shadow-blue-main blue-s-light"><span class="serif italic">$29.99</span> / <span class="lighter">month</span></span>
      <span class="slabtext hard-shadow-light gray-dark">unlimited reminders</span>
      <span class="slabtext lighter hard-shadow-blue-main white">just <span class="serif italic">simple</span></span>
    </div>
    <div class="login page smooth-entry">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <section class="col-md-5 col-md-offset-1 col-sm-6">
          <h2 class="white hard-shadow center-text"><%= fa_icon "user" %> sign up</span></h2>
          <input class="floatlabel styled bg-blue-light-a" type="text" placeholder="Full Name" />

          <input class="floatlabel styled bg-blue-light-a" type="text" placeholder="Company" />

          <%= f.email_field :email, autofocus: true, placeholder: :email, class: 'floatlabel styled bg-blue-light-a' %>

          <%= f.password_field :password, autocomplete: "off", placeholder: :password, class: 'floatlabel styled bg-blue-light-a' %>

          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password again...", class: 'floatlabel styled bg-blue-light-a' %>
        </section>

        <section class="col-md-5 col-sm-6">
          <h2 class="white hard-shadow center-text"><%= fa_icon "credit-card" %> billing info</h2>

          <input class="floatlabel styled bg-blue-light-a" type="text" placeholder="Name on Card" />

          <input class="floatlabel styled bg-blue-light-a" type="text" placeholder="CC #" />

          <input class="floatlabel styled bg-blue-light-a margin-right" data-label="MM/YY" data-wrapper="inline half" type="text" placeholder="Expiration" /><input class="floatlabel styled bg-blue-light-a margin-left" data-wrapper="inline half float-right" type="text" placeholder="Sec Code" />

          <%= f.submit "SIGN UP", class: "btn btn-default btn-lg" %>
          <%= render "devise/shared/links" %>
        </section>

      <% end %>

    </div>
  </div>
</div>