<header id="main-nav" class="nav bg-white">
  <div class="outer-container fill-vertical">
    <section class="logo simpleremind-logo simple center-vertical">
      <a href="/"><img src="/assets/simpleremind-logo.png"></a>
    </section>
    <section id="user-nav" class="center-vertical">
      <% if user_signed_in? %>
        <%= link_to 'EDIT PROFILE', edit_user_registration_path, class: "btn btn-default" %>
        <%=link_to "SIGN OUT", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
      <% else %>
        <%=link_to_modal "LOGIN", new_user_session_path, class: "btn btn-default" %>
        <%=link_to "SIGN UP", new_user_registration_path, class: "btn btn-primary" %>
      <% end %>
    </section>
  </div>
</header>

<% if user_signed_in? %>
  <nav id="app-nav" class="navbar navbar-inverse tab-bar natural-shadow-box" role="navigation">
    <div class="container-fluid">
      <ul class="nav navbar-nav float-none-cascade center-text">   
        <%= nav_link("/calendar") do %>
          <%= fa_icon "calendar" %>
          <span>Calendar</span>
        <% end %>
        <%= nav_link("/contacts") do %>
          <%= fa_icon "group" %>
          <span>My Contacts</span>
        <% end %>
        <%= nav_link("/send") do %>
          <%= fa_icon "send" %>
          <span>Send Reminder</span>
        <% end %>
        <%= nav_link("/reminders") do %>
          <%= fa_icon "book" %>
          <span>My Reminders</span>
        <% end %>
        <%= nav_link(edit_user_registration_path) do %>
          <%= fa_icon "user" %>
          <span>My Account</span>
        <% end %>
      </ul>
    </div><!-- /.container-fluid -->
  </nav>

  <div id="app-nav-push" class="tab-bar-push">
  </div>
<% end %>