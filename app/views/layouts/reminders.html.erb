<div id="reminders-page" class="app-page splash full-page-app">
  <div class="outer-container short">
    <section class="filters col-md-3 col-md-push-9">
      <ul class="underline-list clearfix" role="tablist">
        <li class="col-xs-4 col-md-12"><a class="white hard-shadow" href="#upcoming" role="tab" data-toggle="tab">Upcoming</a></li>
        <li class="col-xs-4 col-md-12"><a class="white hard-shadow" href="#failed" role="tab" data-toggle="tab">Failed</a></li>
        <li class="col-xs-4 col-md-12"><a class="white hard-shadow" href="#delivered" role="tab" data-toggle="tab">Delivered</a></li>
      </ul>
    </section>

    <section class="reminders col-md-9 col-md-pull-3 tab-content">

      <h2 class="white hard-shadow">My Reminders</h2>

      <section class="tab-pane" id="upcoming">
        <section class="space-bottom">
          <h4 class="blue-main hard-shadow">Upcoming Sends</h4>
        </section>

        <%= render :partial=>"/layouts/reminder_column_headers" %>

        <ul class="reminder-list bg-burn padded">
          <li>
            <%= render :partial=>"/layouts/example_reminder" %>
            <section class="edit edit-nav clearfix reminder-column">
              <%=fa_icon "pencil", class: 'col-xs-6 toggle-editable' %>
              <%=fa_icon "trash-o", class: 'col-xs-6 toggle-destroy' %>
            </section>
          </li>
          <li>
            <%= render :partial=>"/layouts/example_reminder" %>
            <section class="edit edit-nav clearfix reminder-column">
              <%=fa_icon "pencil", class: 'col-xs-6 toggle-editable' %>
              <%=fa_icon "trash-o", class: 'col-xs-6 toggle-destroy' %>
            </section>
          </li>
        </ul>
      </section>

      <section class="tab-pane" id="failed">
        <section class="space-bottom">
          <h4 class="blue-main hard-shadow">Failed Sends</h4>
        </section>

        <%= render :partial=>"/layouts/reminder_column_headers" %>

        <ul class="reminder-list bg-burn padded">
          <li class="failed">
            <%= render :partial=>"/layouts/example_reminder" %>
            <section class="edit edit-nav clearfix reminder-column">
              <%=fa_icon "pencil", class: 'col-xs-4 toggle-editable' %>
              <%=fa_icon "trash-o", class: 'col-xs-4 toggle-destroy' %>
              <%=fa_icon "mail-reply", class: 'col-xs-4' %>
            </section>
          </li>
          <li class="failed">
            <%= render :partial=>"/layouts/example_reminder" %>
            <section class="edit edit-nav clearfix reminder-column">
              <%=fa_icon "pencil", class: 'col-xs-4 toggle-editable' %>
              <%=fa_icon "trash-o", class: 'col-xs-4  toggle-destroy' %>
              <%=fa_icon "mail-reply", class: 'col-xs-4' %>
            </section>
          </li>
        </ul>
      </section>

      <section class="tab-pane" id="delivered">
        <section class="space-bottom">
          <h4 class="blue-main hard-shadow">Delivered Sends</h4>
        </section>

        <%= render :partial=>"/layouts/reminder_column_headers" %>

        <ul class="reminder-list bg-burn padded">
          <li class="delivered">
            <%= render :partial=>"/layouts/example_reminder" %>
            <section class="edit edit-nav clearfix reminder-column">
              <%=fa_icon "trash-o", class: 'col-xs-4 toggle-destroy' %>
            </section>
          </li>
          <li class="delivered">
            <%= render :partial=>"/layouts/example_reminder" %>
             <section class="edit edit-nav clearfix reminder-column">
              <%=fa_icon "trash-o", class: 'col-xs-4 toggle-destroy' %>
            </section>
          </li>
          <li class="delivered">
            <%= render :partial=>"/layouts/example_reminder" %>
            <section class="edit edit-nav clearfix reminder-column">
              <%=fa_icon "trash-o", class: 'col-xs-4 toggle-destroy' %>
            </section>
          </li>
        </ul>
      </section>

    </section>
  </div>
</div>